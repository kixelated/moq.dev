---
export const prerender = false;

const { room } = Astro.params;
if (!room) return Astro.redirect("/404");

import Issues from "@/components/issues.astro";
import Element from "@/components/publish.tsx";
import Layout from "@/layouts/global.astro";
---

<Layout title="Publish" description="Publish a public broadcast.">
	<Issues />

	<p class="mb-16">
		Publishing a <strong>PUBLIC</strong> broadcast. Pls don't do anything stupid.
	</p>

	<Element client:only="solid-js" room={room} />
</Layout>
